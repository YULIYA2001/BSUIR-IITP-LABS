#ifndef RectH
#define RectH

#include "Figure.h"

class  Rectan : public Figure
{
	int x1,y1,x2,y2;
	float S, P;
	int X, Y;
	public:
	Rectan(){}  //конструктор по умолчанию
	Rectan(int, int, int, int); //конструктор
	~Rectan(){}   //деструктор
	void show(TCanvas *Canvas);
	float Area();
	float Perimeter();
	int XCentMass();
	int YCentMass();
};

#endif
