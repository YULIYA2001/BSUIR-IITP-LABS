//---------------------------------------------------------------------------

#ifndef SquareH
#define SquareH

#include "Figure.h"

class  Square : public Figure
{
	int x1,y1,x2,y2;
	float S, P;
	int X, Y;
	public:
	Square(){}  //конструктор по умолчанию
	Square(int, int, int, int); //конструктор
	~Square(){}   //деструктор
	void show(TCanvas *Canvas);
	float Area();
	float Perimeter();
	int XCentMass();
	int YCentMass();
	void hide(TCanvas *Canvas);
	void ChangeCentMass(Square, int, int);
};

#endif
